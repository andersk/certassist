{
  "name": "certassist",
  "version": "1.0.0",
  "description": "JavaScript interface to ca.mit.edu and ca.csail.mit.edu",
  "homepage": "https://certassist.mit.edu/",
  "bugs": "https://github.com/sipb/certassist/issues",
  "license": "MIT",
  "author": "Anders Kaseorg",
  "repository": {
    "type": "git",
    "url": "https://github.com/sipb/certassist.git"
  },
  "scripts": {
    "build": "webpack -p",
    "watch": "webpack --mode=development --debug --output-pathinfo --watch"
  },
  "dependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/register": "^7.10.5",
    "@duosecurity/duo_web": "^1.0.5",
    "@fortawesome/fontawesome-free": "^5.14.0",
    "babel-loader": "^8.1.0",
    "core-js": "^3.6.5",
    "css-loader": "^4.2.2",
    "file-loader": "^6.0.0",
    "git-revision-webpack-plugin": "^3.0.6",
    "html-webpack-plugin": "^4.3.0",
    "js-polyfills": "^0.1.42",
    "mini-css-extract-plugin": "^0.10.0",
    "node-forge": "^0.10.0",
    "regenerator-runtime": "^0.13.7",
    "ssl-root-cas": "^1.3.1",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "devDependencies": {
    "@types/git-revision-webpack-plugin": "^3.0.0",
    "@types/html-webpack-plugin": "^3.2.3",
    "@types/mini-css-extract-plugin": "^0.9.1",
    "@types/node-forge": "^0.9.5",
    "@types/webpack": "^4.41.21",
    "prettier": "^2.1.0",
    "typescript": "^4.0.2",
    "xo": "^0.33.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "corejs": 3,
          "useBuiltIns": "usage"
        }
      ],
      "@babel/typescript"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": false,
    "trailingComma": "es5",
    "useTabs": false,
    "overrides": [
      {
        "files": "*.ejs",
        "options": {
          "parser": "html"
        }
      }
    ]
  },
  "xo": {
    "envs": [
      "browser",
      "es6"
    ],
    "prettier": true,
    "rules": {
      "strict": "error"
    },
    "overrides": [
      {
        "files": [
          "webpack.config.ts"
        ],
        "envs": [
          "node"
        ]
      }
    ]
  }
}
